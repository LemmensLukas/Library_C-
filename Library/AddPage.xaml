<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Library.AddPage"
             Title=""           
             BackgroundColor="#262836">

    <VerticalStackLayout HorizontalOptions="Center">
        <HorizontalStackLayout HorizontalOptions="Center">
            <Entry
                
                Placeholder="Enter Movie Title"
                Text="{Binding }"
                Margin="15"
                TextColor="White"
                />
            <Entry
                Placeholder="Enter Movie Author"
                Text="{Binding }"
                Margin="15"
                TextColor="White"
                />
        </HorizontalStackLayout>
        
        <Editor
            MinimumHeightRequest="110"
            Placeholder="Enter Movie Description"           
            TextColor="White"
            Margin="15"
            Text="{Binding }"
            />
        <Entry
            Placeholder="Enter Movie Rating"
            Text="{Binding }"
            Margin="15"
            TextColor="White"
            />

        <Button Text="Add" BackgroundColor="#512BD4" TextColor="LightGray" BorderColor="LightGray" Margin="15"/>
        <Button Text="Home" BackgroundColor="#512BD4" TextColor="LightGray" BorderColor="LightGray" Margin="15"/>
        
        
    </VerticalStackLayout>
</ContentPage>